generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Company {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  users User[]
  leave Leave[]
}

model User {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  email      String
  password   String
  companyId  String     @db.ObjectId
  role       Role       @default(Staff)
  department Department @default(dev)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Company   Company  @relation(fields: [companyId], references: [id])

  leave Leave[]

  @@index([companyId, email])
}

model Leave {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  startDate   DateTime
  endDate     DateTime
  title       String
  description String
  status      Status   @default(Pending)
  userId      String?  @db.ObjectId
  companyId   String?  @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  User    User?    @relation(fields: [userId], references: [id])
  Company Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
}

model Invitations {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  email      String     @unique
  isActive   Boolean    @default(true)
  department Department @default(dev)
  companyId  String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Role {
  Admin
  Staff
}

enum Status {
  Pending
  IsApproved
  Rejected
}

enum Department {
  dev
  designer
  manager
}

